@model IEnumerable<HRMS.Models.HRMS_Program_Attandance>

@{
    ViewBag.Title = "View";
}

<h2>View</h2>
@if (Model.Count<HRMS.Models.HRMS_Program_Attandance>() > 0 && Model != null)
{
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.HRMS_ProgramDetail.ProgramName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.AttandenceDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EmpName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsPresent)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Gender)
            </th>

            <th>
                @Html.DisplayNameFor(model => model.HRMS_DEPT.Dept_Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.HRMS_DESG_MS.Desg_Name)
            </th>


        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.HRMS_ProgramDetail.ProgramName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.AttandenceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.EmpName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsPresent)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Gender)
                </td>

                <td>
                    @Html.DisplayFor(modelItem => item.HRMS_DEPT.Dept_Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.HRMS_DESG_MS.Desg_Name)
                </td>

            </tr>
        }

    </table>
}
else
{
    <div class="container">
        <h2>sorry!!! We don't have any Records Right Now...</h2>
    </div>
}
@Html.ActionLink("Go Back", "Index", "TrainingAttandance", new { area = "" }, new { @class = "btn btn-link " })
