@model HRMS.Models.ReligionMaster

@{
    ViewBag.Title = "Create";
}
<head>
    <link href="~/StyleSheet/UnitStyleSheet.css" rel="stylesheet" />
</head>
<h2>Create Religion</h2>


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">

    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(model => model.ReligionShortName, htmlAttributes: new { @class = "control-label col-md-2 required" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReligionShortName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReligionShortName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ReligionName, htmlAttributes: new { @class = "control-label col-md-2 required" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.ReligionName, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.ReligionName, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Create" class="btn btn-primary " /><i> &emsp;</i>
            <input type="reset" value="Cancel" class="btn btn-danger" />
        </div>
    </div>

    @if (ViewBag.error != null)
    {
        <div class="alert alert-success alert-dismissible " style="width:50%;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>
                @ViewBag.error
            </span>
        </div>
    }


    @if (ViewBag.success != null)
    {
        <div class="alert alert-success alert-dismissible " style="width:50%;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>
                @ViewBag.success
            </span>
        </div>
    }
   
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
