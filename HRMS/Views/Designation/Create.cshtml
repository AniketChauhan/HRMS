@model HRMS.Models.HRMS_DESG_MS

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>
@*testing by harsh*@

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Designation</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            <label class="control-label col-md-3">Division name</label>
            <div class="col-md-9">
                @Html.DropDownListFor(model => model.Desg_Parent_ID, new SelectList(ViewBag.DropdownData, "Desg_Id", "Desg_Name"), "Select Designation", htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.Desg_Parent_ID, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group ">
            <span class="col-md-3 control-label">
                <i class="glyphicon glyphicon-asterisk" style="color:red ; font-size:x-small;"></i>
                @Html.LabelFor(model => model.Desg_Name)
            </span>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Desg_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desg_Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <span class="col-md-3 control-label">
                <i class="glyphicon glyphicon-asterisk" style="color:red ; font-size:x-small;"></i>
                @Html.LabelFor(model => model.Desg_Short_Name)
            </span>
            <div class="col-md-9">
                @Html.EditorFor(model => model.Desg_Short_Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Desg_Short_Name, "", new { @class = "text-danger" })
            </div>
        </div>



        <div class="form-group">
            @Html.LabelFor(model => model.IsActive, htmlAttributes: new { @class = "control-label col-md-3" })
            <div class="col-md-9">
                <div class="checkbox">
                    @Html.EditorFor(model => model.IsActive)
                    @Html.ValidationMessageFor(model => model.IsActive, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>
        <div class="form-group">
            <div class="col-md-offset-3 col-md-9 ">
                <span>&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;&nbsp;</span>
                <input type="submit" value="Create" class="btn btn-primary" />
                <input type="reset" value="Cancel" class="btn btn-danger" />
            </div>
        </div>
    </div>
}
@if (ViewBag.Designation_Status != null)
{
    <div class="alert alert-success alert-dismissible " style="width:50%;">
        <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
        <span>
            @ViewBag.Designation_Status
        </span>
    </div>
}
<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
