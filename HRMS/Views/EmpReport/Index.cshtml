@using ReportViewerForMvc;
<style type="text/css">
    .IFramee {
        /*for the report viewer*/
        border: none;
        padding: 0;
        margin-left: -8%;
        margin-top: 1%;
    }

</style>

                    @if (ViewBag.ReportViewer != null)
                    {
                        @Html.ReportViewer(ViewBag.ReportViewer as Microsoft.Reporting.WebForms.ReportViewer, htmlAttributes: new { @class = "IFramee",
                       @style = "width: 100% ;height: 100%;" })
                    }
