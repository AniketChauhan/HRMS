        $(function () {
            $(".datepicker").datepicker({
                dateFormat: "yy-mm-dd",
                changeMonth: true,
                changeYear: true,
                yearRange: "1920:2020",
                orientation: "right top",
                //maxDate: new Date()

            });

        });
