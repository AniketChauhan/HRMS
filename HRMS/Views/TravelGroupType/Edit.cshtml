@model HRMS.Models.HRMS_TravelGroupType_MS

@{
    ViewBag.Title = "Edit";
}
<head>
    <link href="~/StyleSheet/UnitStyleSheet.css" rel="stylesheet" />

</head>

<h2>Edit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

<div class="form-horizontal">
    <h4>HRMS_TravelGroupType_MS</h4>
    <hr />
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    @Html.HiddenFor(model => model.ID)

    <div class="form-group">
        @Html.LabelFor(model => model.Mode_ID, "Mode_ID", htmlAttributes: new { @class = "control-label col-md-2" })
        <div class="col-md-10">
            @Html.DropDownList("Mode_ID", null, "--Select Mode--", htmlAttributes: new { @class = "form-control" })
            @Html.ValidationMessageFor(model => model.Mode_ID, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Date, htmlAttributes: new { @class = "control-label col-md-2 required" })

        <div class="col-md-3">
            <div class="input-group">

                @Html.EditorFor(model => model.Date, new { htmlAttributes = new { @class = "form-control datepicker" } })
                @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })
                <span class="input-group-addon">
                    <i class="glyphicon glyphicon-calendar"></i>
                </span>
            </div>
        </div>
        @Html.ValidationMessageFor(model => model.Date, "", new { @class = "text-danger" })

    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Group_Name, htmlAttributes: new { @class = "control-label col-md-2 required" })
        <div class="col-md-10">
            @Html.EditorFor(model => model.Group_Name, new { htmlAttributes = new { @class = "form-control" } })
            @Html.ValidationMessageFor(model => model.Group_Name, "", new { @class = "text-danger" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" value="Save" class="btn btn-primary " /><i> &emsp;</i>
            <input type="reset" value="Cancel" class="btn btn-danger" />
        </div>
    </div>

    @if (ViewBag.error != null)
    {
        <div class="alert alert-success alert-dismissible " style="width:50%;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>
                @ViewBag.error
            </span>
        </div>
    }


    @if (ViewBag.success != null)
    {
        <div class="alert alert-success alert-dismissible " style="width:50%;">
            <a href="#" class="close" data-dismiss="alert" aria-label="close">&times;</a>
            <span>
                @ViewBag.success
            </span>
        </div>
    }
    
</div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

<script src="~/Scripts/jquery-3.4.1.min.js"></script>
<script src="~/Scripts/jquery.validate.min.js"></script>
