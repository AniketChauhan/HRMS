@model IEnumerable<HRMS.Models.HRMS_Training_Request_Application>

@{
    ViewBag.Title = "Index";
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Index</title>
</head>
<body>
    <h2>Index</h2>
    @*<p>
            @Html.ActionLink("Create New", "Create")
        </p>*@
    <table class="table table-bordered table-responsive table-striped">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.request_date)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Training_Name)
            </th>
            @*<th>
                    @Html.DisplayNameFor(model => model.TrainingDetails)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ApprovedDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Status)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Approved_Remarks)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accounts.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Accounts1.UserName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HRMS_DEPT.Dept_Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.HRMS_DESG_MS.Desg_Name)
                </th>*@
            <th>
                @Html.DisplayNameFor(model => model.HRMS_TRAINING_SKILL_MS.Skill_Name)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.request_date)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Training_Name)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.TrainingDetails)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovedDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Status)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approved_Remarks)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accounts.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Accounts1.UserName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HRMS_DEPT.Dept_Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.HRMS_DESG_MS.Desg_Name)
                    </td>*@
                <td>
                    @Html.DisplayFor(modelItem => item.HRMS_TRAINING_SKILL_MS.Skill_Name)
                </td>
                <td>
                    @if (item.ProgramFlag == null)
                    {
                        @Html.ActionLink("Add Program", "Create", new { id = item.ApplicationId }, new { @class = "btn btn-primary" })
                    }
                    else if (item.ProgramFlag == 1)
                    {
                        @Html.ActionLink("Edit Program", "Edit", new { id = item.ApplicationId }, new { @class = "btn btn-warning" })
                    }
                    else if (item.ProgramFlag == 2)
                    {
                        @Html.ActionLink("View Completed", "", new { id = item.ApplicationId }, new { @class = "btn btn-success" })
                    }
                    else if (item.ProgramFlag == 3)
                    {
                        @Html.ActionLink("View Cancalled", "", new { id = item.ApplicationId }, new { @class = "btn btn-success" })
                    }
                </td>
            </tr>
        }

    </table>
</body>
</html>
