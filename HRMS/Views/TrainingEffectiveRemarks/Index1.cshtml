@model IEnumerable<HRMS.Models.HRMS_ProgramDetail>

@{
    ViewBag.Title = "Index1";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Programs Lists</h2>
<hr />

@*<p>
        @Html.ActionLink("Create New", "Create")
    </p>*@

@if (ViewBag.status != null)
{
    @ViewBag.status
}
else
{
    <table class="table table-bordered table-striped table-responsive">
        <tr style="background-color:lightgray">

            <th>
                @Html.DisplayNameFor(model => model.ProgramName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.FromDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ToDate)
            </th>

            <th></th>
        </tr>

        @foreach (var item in Model)
        {
    <tr>

        <td>
            @Html.DisplayFor(modelItem => item.ProgramName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.FromDate)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ToDate)
        </td>


        @*@if (item.TrainingStatus != null)*@
        @if (User.IsInRole("midman"))
        {
            <td>
                @Html.ActionLink("ADD Remarks", "Create", new { id = item.ID }, new { @class = "btn btn-primary" })

            </td>
        }
        else
        {
            <td>
                @Html.ActionLink("View Remarks", "Index", new { id = item.ID }, new { @class = "btn btn-primary" })

            </td>
        }
    </tr>
        }

    </table>
}